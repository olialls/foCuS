<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StockActivity"
    android:background="@drawable/background_gradient">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutSymbol"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextSymbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stock Symbol"
                android:inputType="text"
                android:maxLines="1"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                android:textSize="18dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="20sp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonCollect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Get Price"
            style="@style/AppTheme.RoundedCornerMaterialButton"/>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>